<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.PadelNet"
        tools:targetApi="31">

        <activity
            android:name=".funcionamiento.Galeria"
            android:screenOrientation="portrait"
            android:exported="false" />

        <activity
            android:name=".funcionamiento.Campeonatos"
            android:screenOrientation="portrait"
            android:exported="false" />

        <activity
            android:name=".funcionamiento.MyReservas"
            android:screenOrientation="portrait"
            android:exported="false" />

        <activity
            android:name=".funcionamiento.NewReserva"
            android:screenOrientation="portrait"
            android:exported="false" />

        <activity
            android:name=".acceso.Launcher"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".funcionamiento.Root"
            android:screenOrientation="portrait"
            android:exported="false"/>

        <activity android:name=".acceso.Login"
            android:screenOrientation="portrait"
            android:exported="false"/>

        <activity android:name=".acceso.Register"
            android:screenOrientation="portrait"
            android:exported="false"/>

        <activity
            android:name=".acceso.MainActivity"
            android:theme="@style/Theme.AppCompat"
            android:exported="false"
            android:screenOrientation="portrait" />
    </application>

</manifest>