<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="26dp"
            android:text="GalerÃ­a"
            android:textSize="35sp" />

        <ImageView
            android:id="@+id/pista1"
            android:layout_width="258dp"
            android:layout_height="193dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/pistauno" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Pista 1"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/pista2"
            android:layout_width="264dp"
            android:layout_height="227dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            app:srcCompat="@drawable/pistados" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="Pista 2"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/pista3"
            android:layout_width="198dp"
            android:layout_height="255dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            app:srcCompat="@drawable/pistatres" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_gravity="center_horizontal"
            android:text="Pista 3"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_horizontal|bottom"
            android:height="60dp"
            android:backgroundTint="#232323"
            android:text="Volver"
            android:layout_marginTop="40dp"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>